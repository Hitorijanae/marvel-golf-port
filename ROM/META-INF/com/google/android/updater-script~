show_progress(1.000000, 60000);


#
# MOUNT STUFF
#

mount("MTD","userdata","/data");
mount("MTD", "system", "/system");

#
# EXTRACT STUFF
#
package_extract_dir("system", "/system");
run_program("/sbin/mkdir", "/sd-ext");
        run_program("/sbin/mount", "-t", "auto", "/dev/block/mmcblk0p2", "/sd-ext");
run_program("/sbin/mkdir", "/sd-ext/app");
run_program("/sbin/mkdir", "/sd-ext/sys-parts");
run_program("/sbin/mkdir", "/sd-ext/sys-parts/app");
run_program("/sbin/mkdir", "/sd-ext/sys-parts/framework");
package_extract_dir("data/app", "/sd-ext/app");
package_extract_dir("data/app_s", "/sd-ext/sys-parts/app");
package_extract_dir("data/framework", "/sd-ext/sys-parts/framework");

#
# SET EXTRACTION PERMISSIONS
#
set_perm_recursive(1000, 1000, 0771, 0644, "/sd-ext/app");
set_perm_recursive(1000, 1000, 0771, 0644, "/sd-ext/sys-parts/app");
set_perm_recursive(1000, 1000, 0771, 0644, "/sd-ext/sys-parts/framework");

#
# SYMLINK
#
package_extract_dir("setup", "/tmp");
set_perm_recursive(0, 0, 0755, 0755, "/tmp");
run_program("/tmp/symlinks-sdext");
run_program("/tmp/symlinks-framework");
delete("/tmp/symlinks-framework");
delete("/tmp/symlinks-sdext");

#
# DALVIK CACHE CLEAN
#
delete_recursive("/data/dalvik-cache");

#
# TOOLBOX
#

symlink("toolbox", "/system/bin/sendevent");
