# FORMAT STUFF [ACTS AS A SORT OF WAIT TOOL]
#

format("MTD", "system");
format("MTD", "boot");
format("MTD", "cache");

#
# CONTINUE UI PRINT
#

ui_print("Sense 4");
ui_print("");
